apiVersion: v1
kind: PersistentVolume
metadata:
  name: efs-pv-postgresql
spec:
  capacity:
    storage: 8Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  storageClassName: "efs-sc"
  persistentVolumeReclaimPolicy: Retain
  claimRef:
    name: data-postgresql-0
    namespace: digital-twin
  csi:
    driver: driver.longhorn.io  #efs.csi.aws.com
    # Cf. https://github.com/kubernetes-sigs/aws-efs-csi-driver/tree/master/examples/kubernetes/access_points for more details
    volumeHandle: pgsql-viviane

    # TODO volumeHandle: {{ .Values.volumes.pv.volumeHandle }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-postgresql-0
  namespace: digital-twin
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: "efs-sc"
  resources:
    requests:
      storage: 8Gi
